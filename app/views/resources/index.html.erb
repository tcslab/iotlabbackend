<h1>Listing resources</h1>

<table>
  <thead>
    <tr>
      <th>Ipso index</th>
      <th>Function set</th>
      <th>Node</th>
      <th>Resource type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @resources.each do |resource| %>
      <tr>
        <td><%= resource.ipso_index %></td>
        <td><%= resource.name %></td>
        <td><%= resource.function_set_id %></td>
        <td><%= resource.node_id %></td>
        <td><%= resource.resource_type_id %></td>
        <td><%= link_to 'Show', resource %></td>
        <td><%= link_to 'Edit', edit_resource_path(resource) %></td>
        <td><%= link_to 'Destroy', resource, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Resource', new_resource_path %>
